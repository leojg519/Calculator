@{
    ViewBag.Title = "Division";
}

<h2>@ViewBag.Title</h2>
<h3>Here it is possible to compute the <b>division</b> of two or more operands.</h3>
<h3>This version allows only positive integer operations. Remember that you can not divide by zero</h3>

<div class="row">
    <div id="operands-container" class="col-xs-12">
        <div class="operand op0">
            <input />
        </div>
        <span>&#247;</span>
        <div class="operand op1">
            <input />
        </div>
    </div>
</div>

<br />

<div id="error-message" class="col-xs-12">
    <div class="error-container">
        <span></span>
    </div>
</div>

<br />

<div id="result-container" class="col-xs-12">
    <h4>The total value of your calculation is: </h4>
    <h2>Quotient: <span id="quotient-result"></span></h2>
    <h2>Remainder: <span id="remainder-result"></span></h2>
</div>

<br />

<div id="calculate-reset" class="col-xs-12 buttons-container">
    <button id="calculate-total">Calculate total</button>
    <button id="reset-form">Reset</button>
</div>


@Scripts.Render("~/scripts/division")