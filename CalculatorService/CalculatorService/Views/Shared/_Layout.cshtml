<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    @Styles.Render("~/bundles/styles")
    @Scripts.Render("~/bundles/modernizr")

    <script>
        if (localStorage.getItem('trackingId') == undefined) {
            localStorage.setItem('trackingId', Math.floor(Math.random() * 100000));
        }

        window.trackingId = localStorage.getItem('trackingId');
    </script>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Calculator Service", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Add", "Addition", "Addition")</li>
                    <li>@Html.ActionLink("Substract", "Substraction", "Substraction")</li>
                    <li>@Html.ActionLink("Multiply", "Multiplication", "Multiplication")</li>
                    <li>@Html.ActionLink("Divide", "Division", "Division")</li>
                    <li>@Html.ActionLink("Square Root", "SquareRoot", "SquareRoot")</li>
                    <li>@Html.ActionLink("History", "Query", "Query")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>

    <footer>
        <i>&copy; @DateTime.Now.Year - Calculator Service by Leonardo Jimenez Gomez</i>
    </footer>

    @Scripts.Render("~/bundles/libraries")
    @RenderSection("scripts", required: false)
</body>
</html>
